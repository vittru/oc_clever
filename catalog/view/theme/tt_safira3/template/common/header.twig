  {% endif %}
  <!-- General -->
  <!-- Sticky Menu -->
  <!-- Scroll Top -->
  {% if scroll_top %}
    <script>
      $("#back-top").hide();
      $(function () {
        $(window).scroll(function () {
          if ($(this).scrollTop() > $('body').height()/3) {
            $('#back-top').fadeIn();
          } else {
            $('#back-top').fadeOut();
          }
        });
        $('#back-top').click(function () {
          $('body,html').animate({scrollTop: 0}, 800);
          return false;
        });
      });
    </script>
  {% endif %}
  <!-- Advance -->
  {% if custom_css %}
    <style>
      {{ custom_css }}
    </style>
  {% endif %}
  {% if custom_js %}
    <script>
      {{ custom_js }}
    </script>
  {% endif %}
  
  <!-- Bootstrap Js -->
  <script src="catalog/view/javascript/bootstrap/js/bootstrap.min.js" ></script>
</head>
<body class="{{ class }}">
